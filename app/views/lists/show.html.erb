<div class="mini-banner">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <div class="text-right">
    <%= link_to "AÃ±adir Pelicula",  new_list_bookmark_path(@list.id), class: "btn power-color mb-4 mt-4" %>
  </div>
  <% @bookmarks.each do |bookmark| %>
    <div class="card mb-3 shadow">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= image_tag bookmark.movie.poster_url, alt: "Poster", class: "w-100 h-100 rounded-left", style: "max-height: 250px; object-fit: cover;"%>
        </div>
        <div class="col-md-8 d-flex flex-column">
          <div class="card-body">
            <h5 class="card-title font-weight-bolder"><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> <i class="fas fa-star text-warning"></i></h5>
            <p class="card-text text-secondary"><%= bookmark.movie.overview %></p>
          </div>
          <div class="card-body card-text  d-flex justify-content-between align-items-center">
            <p class="font-weight-bold">- <%= bookmark.comment %></p>
            <%= link_to "Borrar", bookmark_path(bookmark), method: 'delete', class: "text-danger nav-link", data: { confirm: "Quieres borrar la pelicula?"} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
