<div class="container mt-3">
  <h1><%= @list.name %></h1>
  <%= link_to "Add Movie",  new_list_bookmark_path(@list.id), class: "btn btn-primary mb-3" %>

  <div class="cards mt-3 mb-3">
    <% @bookmarks.each do |bookmark| %>
      <div class="card">
        <%= image_tag bookmark.movie.poster_url, alt: "Poster", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> ‚ù§</h5>
           <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-body">
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark), method: 'delete' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
